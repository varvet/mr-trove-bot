{
  "name": "slack-bot",
  "version": "1.0.0",
  "description": "A Slack bot that handles events and commands with PDF processing.",
  "main": "dist/app_with_handlers.js",
  "scripts": {
    "start": "node dist/app_with_handlers.js",
    "start:dev": "ts-node src/app_with_handlers.ts",
    "start-debug": "ts-node src/app_debug.ts",
    "start-original": "ts-node src/app.ts",
    "start-comprehensive": "ts-node src/app_comprehensive.ts",
    "dev": "npx nodemon --exec ts-node src/app_with_handlers.ts",
    "dev:comprehensive": "npx nodemon --exec ts-node src/app_comprehensive.ts",
    "build": "tsc",
    "test": "echo \"No tests specified\" && exit 0",
    "setup": "./setup-tokens.sh",
    "validate": "./validate-tokens.sh",
    "deploy": "./deploy.sh",
    "postbuild": "cp -r src/Prompt-assets dist/ 2>/dev/null || true"
  },
  "dependencies": {
    "@slack/bolt": "^3.8.0",
    "dotenv": "^16.0.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "nodemon": "^3.1.10",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "author": "Varvet",
  "license": "MIT"
}
